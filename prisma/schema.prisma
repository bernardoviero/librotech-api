model Authors {
  id               String     @id
  name             String
  books            Books[]
  dataRegistration DateTime   @default(now())
  active           Boolean    @default(true)
}

model Users {
  id                String     @id
  name              String
  email             String     @unique
  password          String
  dataRegistration  DateTime   @default(now())
  loan              Loans[] 
  active            Boolean    @default(true)
}

model Books {
  id               String      @id
  title            String
  gender           String
  publicationDate  DateTime
  author           Authors     @relation(fields: [authorId], references: [id])
  authorId         String    
  loan             Loans[]  
  active           Boolean     @default(true)
}

model Loans {
  id              String       @id
  book            Books        @relation(fields: [bookId], references: [id])
  bookId          String    
  user            Users        @relation(fields: [userId], references: [id])
  userId          String    
  loanDate        DateTime
  returnDate      DateTime?
  returnedDate    DateTime?
  active          Boolean      @default(true)
}

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}